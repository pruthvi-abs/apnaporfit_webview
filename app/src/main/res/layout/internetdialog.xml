<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogParent"
    style="@style/df_dialog_layout"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:gravity="center"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <ProgressBar
                style="?android:progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat" />

            <TextView
                style="@style/homeHeading"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bariol_bold"
                android:text="No Internet"
                android:textColor="#000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/NoConnection"
                style="@style/learnhubTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bariol_regular"
                android:text="Slow or No Internet Connection."
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Continue"
                style="@style/learnhubTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bariol_regular"
                android:text="Please Connect to a Network to Continue."
                android:textSize="14dp"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/retry"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/bariol_bold"
                app:cardBackgroundColor="@color/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Retry"
                    android:textColor="#ffffff"/>

            </androidx.cardview.widget.CardView>

<!--            <Button-->
<!--                android:id="@+id/retry"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_margin="10dp"-->
<!--                android:text="Retry"-->
<!--                android:fontFamily="@font/bariol_bold"-->
<!--                android:textColor="#ffffff"-->
<!--                android:backgroundTintMode="add"-->
<!--                android:background="@drawable/try_background" />-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>